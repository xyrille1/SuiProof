# Sui Network Configuration
SUI_NETWORK=testnet
SUI_RPC_URL=https://fullnode.testnet.sui.io:443

# Institutional Node Sponsor Account
# This is the account that pays gas fees for journalists
# Get this by running: sui keytool export --key-identity <your-address>
# Format should be base64 encoded (suiprivkey1q...)
SPONSOR_PRIVATE_KEY=your_base64_encoded_private_key_here

# Smart Contract Configuration  
PACKAGE_ID=your_deployed_package_id_here

# Agency Configuration
AGENCY_ID=SUI_AP_091
AGENCY_NAME=Associated Press

# Server Configuration
PORT=3001
NODE_ENV=development

# Security
API_KEY=your_secure_api_key_here

# Pinata IPFS Configuration (optional, if node also handles uploads)
PINATA_JWT=your_pinata_jwt_here
PINATA_GATEWAY=gateway.pinata.cloud
